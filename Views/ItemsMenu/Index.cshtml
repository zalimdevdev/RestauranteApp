@model IEnumerable<RestauranteApp.Models.ItemMenu>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreItem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoriaMenu)
            </th>

            <th>
                Imagen
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>


            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreItem)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoriaMenu.NombreCategoria)
            </td>

            <td>
                @if (!string.IsNullOrEmpty(item.ImagenUrl))
                {
                    <img src="@item.ImagenUrl" alt="@item.NombreItem" class="img-thumbnail" style="max-width: 100px; max-height: 100px;" />
                }
                else
                {
                    <span class="text-muted">Sin imagen</span>
                }
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>


            <td>
                <a asp-action="Edit" asp-route-id="@item.ItemId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ItemId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ItemId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
