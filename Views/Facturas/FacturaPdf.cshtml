@model RestauranteApp.Models.Factura

@{
    ViewData["Title"] = "Factura";
    var datosNegocio = ViewBag.DatosNegocio as RestauranteApp.Models.DatosNegocio;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Factura</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            font-size: 12px;
            margin: 20px;
            color: #000;
            background: #fff;
        }
        .header {
            text-align: center;
            border-bottom: 1px solid #000;
            padding-bottom: 10px;
            margin-bottom: 20px;
        }
        .header h1 {
            margin: 0;
            font-size: 18px;
        }
        .header h2 {
            margin: 5px 0;
            font-size: 14px;
        }
        .info-section {
            margin-bottom: 20px;
        }
        .productos {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }
        .productos th, .productos td {
            border: 1px solid #000;
            padding: 3px;
            text-align: left;
            font-size: 11px;
        }
        .productos th {
            font-weight: bold;
        }
        .totales {
            text-align: right;
            margin-top: 10px;
            font-size: 13px;
        }
        .footer {
            text-align: center;
            margin-top: 20px;
            font-size: 10px;
        }
    </style>
</head>
<body>
    <div class="header">
        <h1>@(datosNegocio?.Nombre ?? "Restaurante")</h1>
        <p>@(datosNegocio?.DireccionNegocio ?? "")</p>
        <p>Tel: @(datosNegocio?.Telefono ?? "") | RUC: @(datosNegocio?.Ruc ?? "")</p>
        <h2>Factura de Venta</h2>
    </div>

    <div class="info-section">
        <div class="info-left">
            <p><strong>Número de Factura:</strong> @Model.FacturaId</p>
            <p><strong>Fecha:</strong> @Model.FechaPago.ToString("dd/MM/yyyy HH:mm")</p>
            <p><strong>Método de Pago:</strong> @Model.MetodoPago</p>
        </div>
        <div class="info-right">
            <p><strong>Cliente:</strong> @(Model.Cliente != null ? $"{Model.Cliente.Nombre} {Model.Cliente.Apellido}" : "Consumidor Final")</p>
            <p><strong>Mesa:</strong> @(Model.Mesa?.NumeroMesa.ToString() ?? "N/A")</p>
        </div>
    </div>

    <table class="productos">
        <thead>
            <tr>
                <th>Cantidad</th>
                <th>Producto</th>
                <th>Precio Unit.</th>
                <th>Subtotal</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var detalle in Model.DetalleFacturas)
            {
                <tr>
                    <td>@detalle.Cantidad</td>
                    <td>@detalle.ItemMenu.NombreItem</td>
                    <td>@detalle.PrecioUnitario.ToString("C")</td>
                    <td>@detalle.Subtotal.ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="totales">
        <p><strong>Total a Pagar: @Model.MontoTotal.ToString("C")</strong></p>
    </div>

    <div class="footer">
        <p>Gracias por su preferencia. ¡Vuelva pronto!</p>
        <p>Factura generada el @DateTime.Now.ToString("dd/MM/yyyy HH:mm")</p>
    </div>
</body>
</html>